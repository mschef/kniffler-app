                     <hi rend="latintype">
                        <placeName ref="K00503">Shanghai</placeName> 4 Febr.<lb/>
                        <orgName type="firm" ref="K01011">Bourjau Hübener &amp;
                                    Co.</orgName>
                        <lb/> r/ <date when="1862-02-12">12/2 62</date>
                        <lb/>b/<date when="1862-02-14">14/2 62</date>
                     </hi>
                  </add>
