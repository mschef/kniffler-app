         <p>
            <seg rend="center">
               <stamp style="round" type="postal">
                  <placeName ref="K00525">YOKOHAMA</placeName>
                  <lb/>A<lb/>
                  <date when="1872-11-24">N<unclear>O</unclear> 24<lb/>72</date>
               </stamp>
               <lb/>
               <stamp style="round" type="postal">
                  <placeName ref="K00509">HONG-KONG</placeName>
                  <lb/> C<lb/>
                  <date when="1872-11-14">NO 14<lb/>72</date>
               </stamp>
               <stamp style="round" type="postal">ALA-<unclear>VERONA</unclear>
                  <lb/>5<gap quantity="2" unit="line"/>
                  <unclear>CAMBULLE</unclear>
               </stamp>
               <lb/>
               <stamp style="round" type="postal">
                  <placeName ref="K00554">BRINDISI</placeName>
                  <lb/>6<lb/>O<unclear>FT.</unclear>
                  <lb/>72<lb/>*</stamp>
               <lb/>
               <hi rend="latintype">
                  <hi rend="underline">via <placeName ref="K00554">Brindisi</placeName>
                  </hi>
               </hi>
               <stamp style="round" type="postal">
                  <placeName ref="K00522">HAMBURG</placeName>
                  <lb/>F.<lb/>
                  <date when="1872-10-02">210<lb/>72</date>
                  <lb/>N 5-6N 1</stamp>
               <lb/>
               <hi rend="latintype">Messrs<lb/>
                  <orgName type="firm" ref="K01004">L. Kniffler &amp; C<hi rend="superscript">o</hi>
                  </orgName>
               </hi>
               <lb/>
               <stamp style="rectangular" type="postal">P. D.</stamp>
               <lb/>
               <hi rend="latintype">
                  <hi rend="underline">
                     <placeName ref="K00525">Yokohama</placeName>
                  </hi>
                  <lb/>
                  <placeName ref="K00502">Japan</placeName>
               </hi>
            </seg>
            <lb/>
            <add style="writingMode: vertical-lr; textOrientation: sideways-right" resp="other" place="marginRight">
               <hi rend="underline">1872</hi>
               <lb/>
               <hi rend="latintype">
                  <placeName ref="K00522">Hamburg</placeName>
                  <date when="1872-10-02">2<hi rend="superscript">t</hi> October</date>
                  <lb/>
                  <orgName type="firm" ref="K01064">H,C, Bock</orgName>
                  <lb/>
                  <hi rend="underline">R2<unclear>4</unclear>Nov</hi>
                  <lb/>
                  <date when="1872-12-16">16 Decb</date>
               </hi>
               <lb/> KC</add>
         </p>
      </body>
