                  <lb/>C</stamp>
               <hi rend="latintype">
                  <hi rend="underline">Voie de <placeName ref="K00515">Marseille</placeName>
                  </hi>
               </hi>
               <lb/>
               <hi rend="latintype">Messieurs</hi>
               <stamp style="round" type="postal">
                  <gap/>SEPO<gap/>
                  <lb/>
                  <date when="1866-02-16">16<lb/>FEVR<lb/>66</date>
                  <lb/>A</stamp>
               <stamp style="round" type="postal">
                  <placeName ref="K00577">WATTWYL</placeName>
                  <lb/>
                  <date when="1866-02-16">15<lb/>FEB. 66</date>
                  <lb/>A9<lb/>➕</stamp>
               <lb/>
               <hi rend="latintype">
                  <orgName type="firm" ref="K01004">L. Kniffler +C<hi rend="superscript">o</hi>
                  </orgName>
